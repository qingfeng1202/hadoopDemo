<!-- Put site-specific property overrides in this file. -->

<configuration>
    <!-- 主节点信息 -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://192.168.1.116:9000</value>
    </property>
    <!-- Hadoop的数据存放目录，dfs.namenode.name.dir和dfs.datanode.data.dir会引用该地址做持久化操作，默认是临时目录，需要修改为非临时目录 -->
    <property> 
        <name>hadoop.tmp.dir</name> 
        <value>/var/hadoop/pseudo</value> 
    </property>
</configuration>
